.publ
  padding-top 64px
  &+.pagination
    margin-top 80px
  &--min
    padding-top 0
  &--min-info
    padding 0
    margin-bottom 10px
    .publ__item
      &-type
        position relative
        left auto
        bottom auto
        margin-bottom 17px
      &-date, &-view, &-type
        margin-right 20px
        &:last-child
          margin-right 0
  &__row
    display flex
    align-items center
  &__title
    color #262626
    font-size 23px
    font-weight 700
    line-height 31px
    margin-bottom 21px
  &__item
    display flex
    flex-wrap wrap
    justify-content space-between
    margin-bottom 80px
    &:last-child
      margin-bottom 0
    &--min
      margin-bottom 35px
      .publ__item
        &:last-child
          margin-bottom 0
        &-title
          font-size 18px
          line-height 24px
        &-date, &-view
          margin-bottom 9px
    &-top
      display flex
      flex-wrap wrap
      width 100%
    &-left
      width calc(100%/3 + 12px)
    &-right
      display flex
      flex-direction column
      align-items flex-start
      width calc(100% - 100%/3 - 47px)
      padding-top 28px
    &-date
      display block
      position relative
      color rgba($color, .8)
      font-size 15px
      font-weight 400
      line-height 24px
      margin-right 21px
      padding-left 24px
      margin-bottom 17px
      &:before
        @extend .before
        left 0
        top 3px
        width 14px
        height 15px
        background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAPBAMAAAAmOuNHAAAAD1BMVEUAAACenp6enp6enp6enp4CdBJxAAAABHRSTlMA5kpJG2qUMwAAAC5JREFUCNdjYGBxACE4begCAsIMImDakcGFAQRcEDSLAxDBaELicBpuniKYFgIAZjoPevN7/1AAAAAASUVORK5CYII=') no-repeat center
    &-view
      display block
      position relative
      color rgba($color, .8)
      font-size 15px
      font-weight 400
      line-height 24px
      padding-left 29px
      margin-bottom 17px
      &:before
        @extend .before
        left 0
        top 5px
        width 19px
        height 12px
        background url('data:image/png;base64,') no-repeat center
    &-title
      align-self flex-start
      color #262626
      font-size 23px
      font-weight 700
      line-height 36px
      transition color .5s
      &:hover
        color $blue
    &-descr
      color $color
      font-size 15px
      font-weight 400
      line-height 24px
      margin-top 13px
    &-overimg
      display block
      position relative
      width 100%
    &-img
      display block
      width 100%
      padding-top 66.5%
      background-size cover
      background-repeat no-repeat
      background-position center
    &-type
      position absolute
      display inline-block
      vertical-align top
      left 0
      bottom 0
      color #fff
      font-size 13px
      font-weight 700
      line-height 17px
      padding 4px 15px 6px
      background-color $blue
      z-index 1

