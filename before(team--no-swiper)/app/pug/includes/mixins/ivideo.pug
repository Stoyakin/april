mixin ivideo(cover)
  +b('section').ivideo
    //+e('span').cover(style="background-image: url('"+cover+")'")
    +e('video').item(preload="auto", controls, muted, style="background-image: url('"+cover+"');")
      source(src="static/video/video.ogv", type='video/ogg; codecs="theora, vorbis"')
      source(src="static/video/video.mp4", type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"')
    +e.center
      +e('span').title showreel
      +e('a')(href="#").play-ico
        i
