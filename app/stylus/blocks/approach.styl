.approach
  position relative
  background-color #f6f7f8
  padding 160px 0
  margin-top 160px
  z-index 1
  &__decor
    position absolute
    top 160px
    right -165px
    color #fff
    z-index -1
  //.container
  &__content
    max-width calc(50% + 40px)
  &__title
    margin-bottom 45px
    span
