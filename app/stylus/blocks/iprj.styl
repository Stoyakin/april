.iprj
  position relative
  padding 160px 0
  &--page
    padding 0
    margin-top 80px
    .iprj__item
      &-col:first-child
        display flex
        flex-direction column
        justify-content center
        padding-right 100px
      &-text
        a:not([class]), p:not([class]), ul:not([class]) li, ol:not([class]) li, ol:not([class]) li:before, table:not([class]) th, table:not([class]) td
          font-size 15px
          line-height 24px
  &__decor
    position absolute
    right 80px
    top 165px
    font-size 238px
    line-height 175px
  //.container
  &__marker
    margin-bottom 45px
  &__title
    margin-bottom 89px
  //&__items
  &__item
    display flex
    flex-wrap wrap
    width calc(100% + 30px)
    margin 0 -15px 128px
    &--mirror
      flex-direction row-reverse
    //&:last-child
      //margin-bottom 0
    &-col
      width calc(50% - 30px)
      margin 0 15px
      &:first-child
        padding 0 25px
    &-title
      color $black
      font-size 36px
      font-weight 700
      line-height 44px
      margin-bottom 35px
    &-text
      margin-bottom 45px
      a:not([class]), p:not([class]), ul:not([class]) li, ol:not([class]) li, ol:not([class]) li:before, table:not([class]) th, table:not([class]) td
        color $black
        font-size 18px
        line-height 32px
    //&-more
    &-stat
      display flex
      flex-wrap wrap
      margin-top 45px
      margin-bottom -45px
      &-number
        width 50%
        color $black
        font-size 45px
        font-weight 700
        line-height 45px
        margin-bottom 35px
        span
          display block
          color rgba($black, .8)
          font-size 18px
          font-weight 400
          line-height 32px
          margin-top 5px
    &-fakeimg
      &-over
        width 100%
        height 100%
      &-img
        display block
        width 100%
        padding-top 90%
        background-repeat no-repeat
        background-position center
        background-size cover
  &__bottom
    display flex
    align-items center
    justify-content center
    &-btn, &-href
      margin 0 15px
      min-width 268px
    &-href
      justify-content center

