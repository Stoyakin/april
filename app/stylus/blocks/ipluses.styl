.ipluses
  padding 159px 0 30px
  &__row
    display flex
    flex-wrap wrap
    align-items flex-start
    width calc(100% + 30px)
    margin 0 -15px
  &__item
    display flex
    flex-direction column
    width calc(25% - 30px)
    margin 0 15px 60px
    &-overico
      width 100%
      height 96px
      margin-bottom 43px
    &-ico
      max-height 100%
    &-text
      color $black
      font-size 16px
      font-weight 600
      line-height 32px

