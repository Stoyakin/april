.request-promo
  display flex
  justify-content center
  align-items center
  position relative
  padding 80px 0
  min-height 636px
  background-repeat no-repeat
  background-size cover
  background-position center
  text-align center
  z-index 1
  &:before
    @extend .before
    left 0
    top 0
    width 100%
    height 100%
    background-color rgba(#262626, .85)
    z-index -1
  .container
    display flex
    flex-direction column
    justify-content center
    align-items center
  &__title
    color #fff
    font-size 59px
    font-weight 700
    line-height 64px
    margin-bottom 40px
  &__text
    opacity 0.9
    color rgba(#fff, .9)
    font-size 22px
    font-weight 400
    line-height 32px
    margin-bottom 40px
    max-width 600px
