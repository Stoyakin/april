.reviews
  padding 80px 0
  &--page
    padding 0
    .reviews
      &__row
        margin-bottom 0
      &__item
        width 100%
        &:last-child
          margin-bottom 0
        &-text
          max-height 120px
          overflow hidden
          transition max-height .5s ease-in
          &.show-all
            max-height 600px
  &:last-child
    padding-bottom 0
  &__title
    text-align center
    margin-bottom 54px
  &__row
    display flex
    flex-wrap wrap
    justify-content space-between
    margin-bottom -65px
  &__item
    display flex
    flex-direction column
    align-items flex-start
    position relative
    padding-left 10%
    width calc(50% - 16px)
    margin-bottom 65px
    &-decor
      position absolute
      left 0
      top 10px
      width 96px
      height 80px
      overflow hidden
      &:before
        @extend .before
        left -20px
        top 0
        width 100%
        height 100%
        background url('data:image/png;base64,') no-repeat center
        background-size contain
    &-author
      color $black
      font-size 18px
      font-weight 700
      line-height 24px
      margin-bottom 10px
    &-pos
      color rgba($color, .8)
      font-size 15px
      line-height 24px
      margin-bottom 25px
    &-text
      margin-bottom 25px
      a:not([class]), p:not([class]), ul:not([class]) li, ol:not([class]) li, ol:not([class]) li:before, table:not([class]) th, table:not([class]) td
        color $black
        font-size 15px
        line-height 24px
  &__bottom
    display flex
    align-items center
    justify-content center
    margin-top 74px
  &__btn-more
    margin 0 15px
    min-width 268px
