.footer
  padding-bottom 80px
  padding-top 96px
  &__logo
    display inline-block
    vertical-align top
    transition opacity .5s
    margin-bottom 20px
    @media $mLandscapeMax
      display block
      width 130px
      margin 0 auto 20px
    &:hover
      opacity .7
  &__bottom
    margin-top 10px
    width 100%
  &__row
    display flex
    flex-wrap wrap
    align-items flex-start
