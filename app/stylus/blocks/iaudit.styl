.iaudit
  position relative
  padding 160px 0
  z-index 1
  &:before
    @extend .before
    left 0
    top 0
    width 100%
    height 100%
    background-color rgba(#262626, .85)
    z-index -1
  &__title
    color #fff
    text-align center
    max-width 750px
    margin 0 auto 45px
  &__text
    text-align center
    margin-bottom 40px
    a:not([class]), p:not([class]), ul:not([class]) li, ol:not([class]) li, ol:not([class]) li:before, table:not([class]) th, table:not([class]) td
      color rgba(#fff, .9)
      font-size 22px
      line-height 32px
  &__row
    display flex
    flex-wrap wrap
    width calc(100% + 30px)
    margin 0 -15px
  &__question
    display flex
    width calc(100%/3 - 30px)
    margin 0 15px
    &-number
      position relative
      overflow hidden
      margin-right 15px
      &-item
        flex-shrink 0
        display inline-flex
        align-items flex-end
        position relative
        left -29px
        width 100%
        font-size 91px
        font-weight 600
        line-height 67px
        color #fff
        &:after
          content ''
          position relative
          display inline-block
          flex-shrink 0
          width 14px
          height 14px
          margin-left 10px
          border-radius 50%
          background-color #fff
    &-text
      color rgba(#fff, .9)
      font-size 15px
      font-weight 400
      line-height 32px
  &__form-wrap
    margin-top 45px
