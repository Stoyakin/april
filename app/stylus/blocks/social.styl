.social
  display flex
  flex-wrap wrap
  &--dark
    .social__item
      margin-bottom 0
      &-href
        border-color $dark
        &:hover
          border-color $blue
          background-color transparent
        &--fb
          background-image url('data:image/png;base64,')
          &:hover
            background-image url('data:image/png;base64,')
        &--vk
          background-image url('data:image/png;base64,')
          &:hover
            background-image url('data:image/png;base64,')
        &--tw
          background-image url('data:image/png;base64,')
          &:hover
            background-image url('data:image/png;base64,')
  &__item
    margin-right 16px
    margin-bottom 16px
    &:last-child
      margin-right 0
    &-href
      display block
      width 40px
      height 40px
      border 1px solid rgba(#fff, .3)
      background-repeat no-repeat
      background-position center
      transition background .5s, border .5s
      &:hover
        background-color $blue
      &--fb
        background-image url('data:image/png;base64,')
      &--vk
        background-image url('data:image/png;base64,')
      &--tw
        background-image url('data:image/png;base64,')
