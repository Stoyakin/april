.uploaded-file
  width 100%
  overflow hidden
  &--vert
    display flex
    align-items flex-end
    position absolute
    left calc(100% + 55px)
    bottom -2px
    max-width 300px
    .uploaded-file
      &__label
        padding 5px 5px 20px 5px
        writing-mode tb-rl
        transform scale(-1, -1)
        margin-left -5px
        margin-bottom -5px
        &:after
          right 2px
          bottom 0
          top auto
          transform scale(-1, -1)
      &__items
        margin-left 41px
  &__label
    display inline-block
    vertical-align top
    position relative
    padding-right 30px
    color rgba(#fefefe, .37)
    font-family Stem
    font-size 14px
    line-height 14px
    font-weight 300
    text-transform uppercase
    white-space nowrap
    cursor pointer
    &:after
      @extend .after
      right 0
      top 0
      width 16px
      height 16px
      background url('data:image/png;base64,') no-repeat center
      transform scale(-1, 1)
  &__input
    position absolute
    left 0
    top 0
    opacity 0
    visibility hidden
  &__items
    display flex
    flex-direction column
    justify-content space-between
    align-items flex-start
  &__item
    display flex
    align-items flex-start
    position relative
    padding-right 20px
    margin-bottom 11px
    &:last-child
      margin-bottom 0
    &-name
      color rgba(#fefefe, .37)
      font-size 14px
      line-height 16px
      font-weight 300
      text-transform uppercase
    &-del-btn
      position absolute
      right 0
      top 1px
      width 10px
      height 12px
      background url('data:image/png;base64,') no-repeat center
      border none
      padding 0
      outline none
      user-select none
      cursor pointer

