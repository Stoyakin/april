.advantages
  padding 61px 0 160px
  &:first-child
    padding-top 0
  &:last-child
    padding-bottom 0
  &__title
    margin-bottom 60px
  &__row
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%
    margin-bottom -75px
  &__item
    display flex
    align-items center
    width calc(50% - 16px)
    margin-bottom 75px
    &-overico
      width 90px
      margin-right 58px
    &-info
      width calc(100% - 148px)
    &-title
      color $black
      font-size 22px
      font-weight 700
      line-height 28px
      margin-bottom 20px
    &-descr
      color rgba($color, .8)
      font-size 15px
      font-weight 400
      line-height 24px
