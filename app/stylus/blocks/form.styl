.form
  width 100%
  &--error
    .form__field
      &-label--blue-marker
        &:before
          background-color #e0102d
    .form__indicate-send
      display block
      &:before
        opacity 1
        visibility visible
      &:after
        opacity 0
        visibility hidden
  &--success
    .form__indicate-send
      display block
      &:after
        opacity 1
        visibility visible
      &:before
        opacity 0
        visibility hidden
  &--feedback
    position relative
    max-width 400px
    margin 0 auto
    z-index 1
    &:before
      @extend .before
      left 50%
      top 50%
      transform translate(-50%,-50%)
      width 780px
      height 780px
      border-radius 50%
      background radial-gradient(circle, rgba(#00B1EE,1) 0%, rgba(255,255,255,0) 70%)
      opacity .5
      z-index -1
    .form
      &__field-submit
        margin-top 16px
      &__agreement
        max-width 250px
        margin 25px auto 0
  &--brif
    .form
      &__title
        font-size 21px
        line-height 29px
        text-align left
        margin-bottom 62px
      &__field
        &-input
          text-align right
        &-label
          top 12px
          left 0
          transform none
          font-size 14px
          color rgba(#fff, .49)
          @media $tPortraitMax
            font-size 10px
          &--blue-marker:before
            top 7px
            @media $tPortraitMax
              top 5px
              left -7px
        &-submit
          font-size 30px
          width auto
          margin 0 0 20px 0
          padding-left 0
          overflow visible
          &:before
            @extend .before
            left 50%
            top 80%
            transform translate(-50%,-50%)
            width 350px
            height 350px
            border-radius 50%
            background radial-gradient(circle, rgba(#00B1EE,1) 0%, rgba(255,255,255,0) 70%)
            opacity .45
            transition opacity .5s
            z-index -1
          &:hover
            &:before
              transform translate(-50%,-50%)
              opacity .15
      &__bottom
        margin-top 124px
    .uploaded-file
      margin-top 39px
      &__items:not(:empty)
        margin-top 15px
  &__wrap
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%
    margin-bottom 80px
  &__col
    width calc(50% - 35px)
    @media $tPortraitMax
      width 100%
      & + &
        margin-top 31px
  &__title
    position relative
    color #fff
    font-size 29px
    line-height 37px
    font-weight 300
    text-transform uppercase
    margin-bottom 4px
    text-align center
    letter-spacing 0.025em
    z-index 2
    @media $mLandscapeMax
      font-size 26px
      line-height 32px
    &+.form__row
      margin-top 55px
  &__text
    position relative
    color #fff
    font-size 13px
    line-height 17px
    font-weight 300
    text-transform uppercase
    text-align center
    letter-spacing 0.03em
    z-index 2
    &+.form__row
      margin-top 53px
  &__row
    display flex
    flex-wrap wrap
    position relative
    width 100%
    &+&
      margin-top 31px
    &--big
      &+&
        margin-top 55px
    &+.form__row--vert
      margin-top 0
    &--vert
      margin-top 0
  &__field
    position relative
    width 100%
    z-index 1
    &.warning
      .form__field
        &-input
          border-bottom-color $red
    &--center
      margin 0 auto
    &-title
      color #239cf3
      font-size 16px
      line-height 20px
      font-weight 300
      text-transform uppercase
      margin-bottom 32px
    &-descr
      color #fff
      font-size 16px
      line-height 22px
      font-weight 300
      margin-bottom 35px
    &-textarea
      width 100%
      border 1px solid #fff
      height 151px
      color #fff
      font-family Stem
      font-size 15px
      line-height 20px
      font-weight 300
      text-transform uppercase
      padding 10px 10px
      background none
      outline none
      resize none
      &--min
        height 72px
    &-input
      width 100%
      border none
      border-bottom 1px solid rgba(#fff, .43)
      height 40px
      color #fff
      text-align center
      font-family Stem
      font-size 15px
      line-height 20px
      font-weight 300
      text-transform uppercase
      padding 10px 0
      background none
      outline none
      transition border .5s
      &:focus, &.no-empty
        border-bottom-color #fff
        & + .form__field-label
          opacity 0
          visibility hidden
      &-textarea
        &:focus, &.no-empty
          & + .form__field-label
            opacity 0
            visibility hidden
    &-label
      position absolute
      display inline-block
      left 50%
      transform translateX(-50%)
      top 13px
      max-width 100%
      color rgba(#fff, .1)
      font-family Stem
      font-size 10px
      font-weight 300
      white-space nowrap
      text-transform uppercase
      z-index -1
      transition opacity .5s, visibility .5s
      &--blue-marker
        &:before
          @extend .before
          left -15px
          top 4px
          width 4px
          height 4px
          border-radius 2px
          background-color #12bcfc
          transition background .5s
    &-submit
      display block
      position relative
      width 100%
      color #fff
      font-family Stem
      font-size 17px
      font-weight 300
      text-align center
      padding 20px 25px 19px
      text-transform uppercase
      background none
      user-select none
      border none
      overflow hidden
      outline none
      z-index 1
      @media $mLandscapeMax
        font-size 15px
      &:before, &:after
        @extend .before
        left 0
        top 0
        transition all .5s
        z-index -1
      &::before
        width 100%
        height 100%
        opacity 0
        background rgba(255, 255, 255, 0.1);
        transform scale(1.3, 1.3)
      &::after
        width calc(100% - 2px)
        height calc(100%- 2px)
        border 1px solid #fff
      &:hover
        &::before
          opacity 1
          transform scale(1, 1)
        &::after
          transform scale(0, 0)
          opacity 0
      &--air
        font-size 30px
        width 249px
        margin 15px auto -6px
        padding-bottom 0
        &:before
          display none
          content none
        &:after
          top 10px
          left auto
          right 0px
          width 25px
          height 19px
          background url('data:image/png;base64,') no-repeat center
          border none
        &:hover
          &:after
            opacity 1
            transform none
  &__agreement
    font-size 11px
    line-height 15px
    font-weight 400
    text-transform uppercase
    color rgba(#fff, .53)
    a
      color #12bcfc
      transition color .5s
      &:hover
        color rgba(#12bcfc, .5)
  &__indicate-send
    display none
    position absolute
    top calc(50% + 7px)
    transform translateY(-50%)
    right -55px
    width 30px
    height 30px
    &:before
      @extend .before
      left 5px
      top 5px
      width 20px
      height 20px
      background url('data:image/png;base64,') no-repeat center
      opacity 0
      visibility hidden
      transition opacity .5s, visibility .5s
    &:after
      @extend .after
      left 1px
      top 6px
      width 27px
      height 18px
      background url('data:image/png;base64,') no-repeat center
      opacity 0
      visibility hidden
      transition opacity .5s, visibility .5s

