.ivideo
  display flex
  justify-content center
  align-items center
  position relative
  width 100%
  max-height 32.292vw
  min-height 300px
  overflow hidden
  z-index 1
  transition max-height 1.2s
  cursor pointer
  @media $tPortraitMax
    min-height 450px
  &--full
    max-height 1500px
  &__center
    display flex
    align-items center
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    z-index 1
    transition opacity .5s, visibility .5s
    &--hide
      opacity 0
      visibility hidden
  &__item
    width 100%
    position relative
  &__cover
    display block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-position center
    background-size cover
    z-index -1
  &__title
    color #fff
    font-size 59px
    line-height 49px
    font-weight 300
    text-transform uppercase
    margin-right 38px
    letter-spacing 0.015em
    pointer-events none
    @media $desktopMax
      font-size 40px
    @media $mLandscapeMax
      font-size 28px
  &__play-ico
    display block
    position relative
    width 49px
    height 49px
    border-radius 50px
    border 3px solid #fff
    cursor pointer
    i
      display block
      position absolute
      left 15px
      top 9px
      width 19px
      height 25px
      background url('data:image/png;base64,') no-repeat center
      overflow hidden
      &:before
        @extend .before
        left -19px
        top 1px
        border-style solid
        border-width 12px 0 11px 19px
        border-color transparent transparent transparent #fff
        transition left .5s
  &:hover
    .ivideo__play-ico
      i
        &:before
          left 0




