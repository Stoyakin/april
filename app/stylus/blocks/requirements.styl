.requirements
  max-width 1350px
  &__item
    position relative
    margin-bottom 20px
    color #fff
    font-size 20px
    line-height 22px
    font-weight 300
    &:before
      @extend .before
      left -15px
      top 7px
      width 4px
      height 4px
      border-radius 2px
      background-color #12bcfc
      @media $tPortraitMax
        top 8px
        left -10px
