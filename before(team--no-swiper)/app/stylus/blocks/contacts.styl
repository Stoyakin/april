.contacts
  position relative
  padding 95px 0
  height 92vh
  min-height 600px
  overflow hidden
  z-index 1
  &--info
    height auto
    min-height auto
    padding-bottom 0
  &__row
    display flex
    flex-wrap wrap
    align-items flex-end
    width calc(100% + 40px)
    margin 0 -20px
  &__col
    width calc(25% - 40px)
    margin 0 20px
    @media $tPortraitMax
      width calc(50% - 40px)
      &+&
        margin-top 40px
    @media $mLandscapeMax
      width 100%
    &--r-align
      text-align right
      @media $tPortraitMax
        text-align left
      .contacts__item-data
        align-items flex-end
        @media $tPortraitMax
          align-items flex-start
  &__item
    margin-bottom 36px
    &:last-child
      margin-bottom 0
    &-title
      font-size 16px
      color #fff
      text-transform uppercase
      margin-bottom 21px
    &-data
      display flex
      flex-direction column
      align-items flex-start
      font-family Stem
      font-size 16px
      line-height 18px
      font-weight 300
      color #fefefe
      text-transform none
      address
        display block
        margin-bottom 20px
      a
        font-size 16px
        color #fefefe
        transition color .5s
        &:hover
          color rgba(#fefefe, .5)
      ul li
        text-transform uppercase
        margin-bottom 12px
        a
          font-size 14px
        &:last-child
          margin-bottom 0
  &__cover
    display block
    position absolute
    left 50%
    top 50%
    transform translate(-50%,-50%)
    width 1920px
    height 870px
    background-size cover
    z-index -1
    @media $tPortraitMax
      top -37%
      transform translate(-50%,0)
    @media $mLandscapeMax
      left 10%
    @media $mPortraitMax
      left -10%
  .container
    display flex
    height 100%
    align-items flex-end
  &__map-info
    width 100%
    max-width 400px
    @media $tPortraitMax
      margin-left 40px
    &-item
      position relative
      color #fefefe
      font-size 14px
      line-height 16px
      font-weight 300
      text-transform uppercase
      margin-bottom 36px
      @media $tPortraitMax
        margin-bottom 20px
      &:before
        @extend .before
        left -39px
        background-repeat no-repeat
        background-position center
      &:last-child
        margin-bottom 0
      &--metro
        &:before
          width 20px
          height 16px
          background url('data:image/png;base64,') no-repeat center
      &--address
        &:before
          width 13px
          height 17px
          background url('data:image/png;base64,') no-repeat center
      &--shedule
        &:before
          width 13px
          height 13px
          background url('data:image/png;base64,') no-repeat center
      &--phone
        &:before
          width 13px
          height 13px
          background url('data:image/png;base64,') no-repeat center
      p
      address
        display block
      a
        color #fefefe
  //&__arrow
